{
  "backtest_mode": true,
  "backtest_name": "A股沪深300回测",
  "description": "基于AI Agent的A股沪深300指数成份股交易策略回测",
  "date_range": {
    "start_date": "2024-01-01",
    "end_date": "2024-12-31"
  },
  "initial_capital": 1000000,
  "stock_pool": "hs300",
  "custom_pool": [],
  "consensus_config": {
    "enabled": false,
    "min_score": 70,
    "weights": {
      "technical": 0.2,
      "capital": 0.3,
      "logic": 0.3,
      "sentiment": 0.2
    },
    "technical_indicators": {
      "year_high": true,
      "ma_golden_cross": true,
      "volume_surge": true
    },
    "capital_filters": {
      "northbound_threshold": 50000000,
      "margin_change_threshold": 0.05
    }
  },
  "risk_control": {
    "max_position_ratio": 0.3,
    "max_drawdown_stop": 0.15,
    "daily_loss_limit": 0.05,
    "stop_loss_ratio": 0.1,
    "take_profit_ratio": 0.2,
    "max_stocks_hold": 10
  },
  "trading_config": {
    "slippage": 0.001,
    "commission_rate": 0.0003,
    "min_commission": 5,
    "stamp_tax": 0.001
  },
  "benchmark": {
    "index": "000300.SH",
    "name": "沪深300指数"
  },
  "output": {
    "save_dir": "data/backtest_results",
    "save_trades": true,
    "save_positions": true,
    "generate_report": true,
    "report_format": "html"
  },
  "performance_metrics": [
    "total_return",
    "annual_return",
    "sharpe_ratio",
    "max_drawdown",
    "win_rate",
    "profit_loss_ratio",
    "total_trades"
  ]
}
